{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true,
        "extendedDiagnostics": true,
        "composite": false,
        "outDir": "build",
        "jsx": "react",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2016",
            "dom"
        ],
        "types": [
            "jest"
        ],
        "noImplicitAny": true
    }
}